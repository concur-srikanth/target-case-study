<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/deal_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

  <ImageView
      android:id="@+id/deal_list_item_image_view"
      android:layout_width="@dimen/deal_list_item_image_size"
      android:layout_height="@dimen/deal_list_item_image_size"
      android:layout_margin="16dp"
      android:layout_marginStart="148dp"
      android:src="@drawable/ic_launcher_foreground"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0" />

  <TextView
      android:id="@+id/deal_list_item_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:textSize="18sp"
      android:layout_marginEnd="8dp"
      app:layout_constraintStart_toEndOf="@+id/deal_list_item_image_view"
      app:layout_constraintTop_toTopOf="@+id/deal_list_item_image_view"
      app:layout_constraintVertical_bias="0.24" />


  <View android:layout_width="wrap_content"
      app:layout_constraintStart_toEndOf="@+id/deal_list_item_image_view"
      app:layout_constraintTop_toBottomOf="@+id/deal_list_item_title"
      android:layout_marginLeft="16dp"
      android:layout_height="2px"
      android:layout_marginTop="8dp"
      android:id="@+id/deal_list_item_line"
      android:background="#90909090"/>

  <TextView
      app:layout_constraintStart_toEndOf="@+id/deal_list_item_image_view"
      app:layout_constraintTop_toBottomOf="@+id/deal_list_item_line"
      android:id="@+id/deal_list_item_price"
      android:layout_width="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginTop="8dp"
      android:layout_height="wrap_content"
      android:textSize="18sp" />

  <TextView

      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/deal_list_item_price"
      app:layout_constraintTop_toBottomOf="@+id/deal_list_item_line"
      android:id="@+id/deal_list_item_shop_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/shoplabel"
      android:layout_marginTop="8dp"

      android:textSize="18sp" />


  <TextView
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/deal_list_item_shop_label"
      app:layout_constraintTop_toBottomOf="@+id/deal_list_item_line"
      android:id="@+id/deal_list_item_aisle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:padding="5dp"
      android:background="@drawable/circle"
      android:textColor="@color/red_color"
      android:textSize="18sp" />

  <View android:layout_width="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/deal_list_item_image_view"
      android:layout_marginTop="24dp"
      android:layout_height="2px"
      android:id="@+id/deal_list_item_line2"
      android:background="#90909090"/>


</androidx.constraintlayout.widget.ConstraintLayout>
